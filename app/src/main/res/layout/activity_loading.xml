<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zacmurphy.currencyconverter.LoadingActivity">

    <!--Progress bar to let the user know that data is being fetched-->
    <ProgressBar
        android:id="@+id/loading_spinner"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <!--TextView to display information to the user-->
    <TextView
        android:id="@+id/info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loading_spinner"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:text="@string/message_loadingData"
        android:textAlignment="center"
        style="@style/Notification"/>
</RelativeLayout>
